{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "target": "ES6",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "strict": true,
    "paths": {
      "env/*": ["src/env/*"],
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"],
      "context/*": ["src/context/*"],
      "http/*": ["src/http/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
